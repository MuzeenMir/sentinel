# SENTINEL Security Platform - Environment Configuration
# ======================================================
# Copy this file to .env and update values for your environment
# NEVER commit .env file to version control

# ================================
# Database Configuration
# ================================
POSTGRES_DB=sentinel_db
POSTGRES_USER=sentinel
POSTGRES_PASSWORD=change_this_strong_password_123!
POSTGRES_PORT=5432

# ================================
# Redis Configuration
# ================================
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password  # Uncomment for production

# ================================
# Authentication Configuration
# ================================
# REQUIRED: Generate a secure random key (e.g., openssl rand -hex 32)
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production
JWT_ACCESS_EXPIRES_HOURS=24
JWT_REFRESH_EXPIRES_DAYS=30

# Initial admin user (required for first startup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@123!SecurePassword
ADMIN_EMAIL=admin@sentinel.local

# ================================
# Service Ports
# ================================
AUTH_SERVICE_PORT=5000
DATA_COLLECTOR_PORT=5001
ALERT_SERVICE_PORT=5002
AI_ENGINE_PORT=5003
POLICY_SERVICE_PORT=5004
DRL_ENGINE_PORT=5005
XAI_SERVICE_PORT=5006
COMPLIANCE_ENGINE_PORT=5007
API_GATEWAY_PORT=8080
FRONTEND_PORT=3000

# ================================
# Kafka Configuration
# ================================
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181

# ================================
# Email/SMTP Configuration (for alerts)
# ================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_USE_TLS=true
NOTIFICATION_EMAIL=alerts@example.com

# ================================
# Slack Integration (optional)
# ================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx

# ================================
# CORS Configuration
# ================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ================================
# Debug Mode (disable in production)
# ================================
FLASK_DEBUG=false
